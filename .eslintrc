{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "restParams": true,
    "spread": true,
    "experimentalObjectRestSpread": true
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "flowtype",
    "flowtype-errors"
  ],
  "globals": {
    "fetch": true,
    "window": true,
    "__DEV__": true
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "react/jsx-filename-extension": "off",
    "react/prefer-stateless-function": "off",
    "flowtype-errors/show-errors": "error",
  }
}
